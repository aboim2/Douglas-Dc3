<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
    <path>Century41-buttons.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>OnOff</object-name>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>-0.01</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <property>controls/autoflight/autopilot[0]/engage</property>
        <factor>-20</factor>
        <offset-deg>10</offset-deg>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>OnOff</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>controls/autoflight/autopilot[0]/engage</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Up</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>autopilot/century/pitch-button</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>autopilot/century/pitch-button</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>Down</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>autopilot/century/pitch-button</property>
                <value>-1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>autopilot/century/pitch-button</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>


    <animation>
        <type>pick</type>
        <object-name>HDG</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-cycle</command>
                <property>autopilot/century/lateral-mode</property>
                <value>1</value>
                <value>0</value>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>NAV</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-cycle</command>
                <property>autopilot/century/lateral-mode</property>
                <value>2</value>
                <value>0</value>
            </binding>
        </action>
        <action>
            <button>1</button>
            <binding>
                <command>property-toggle</command>
                <property>autopilot/century/nav-armed</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ATT</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>autopilot/century/vertical-mode</property>
                <value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ALT</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>autopilot/century/vertical-mode</property>
                <value>1</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>APR</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>autopilot/century/lateral-mode</property>
                <value>2</value>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>autopilot/century/gs-armed</property>
            </binding>
        </action>
        <action>
            <button>1</button>
            <binding>
                <command>property-assign</command>
                <property>autopilot/century/nav-armed</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>autopilot/century/gs-armed</property>
                <value>1</value>
            </binding>
        </action>
    </animation>
</PropertyList>

